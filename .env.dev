# ðŸš€ MyCoder Development Environment Configuration
# Pro development s live reload a debugging

# ===== OLLAMA CONFIGURATION =====
OLLAMA_HOST=0.0.0.0
OLLAMA_PORT=11434
OLLAMA_DEBUG=1
OLLAMA_VERBOSE=1

# ===== MYCODER CONFIGURATION =====
MYCODER_MODE=FULL
MYCODER_LLM_PROVIDER=ollama
MYCODER_LLM_MODEL=deepseek-coder:1.3b-base-q4_0
MYCODER_DEV_MODE=true
MYCODER_API_PORT=8000
MYCODER_API_HOST=0.0.0.0

# ===== DEVELOPMENT SETTINGS =====
PYTHONPATH=/app/src:/app
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
LOG_LEVEL=DEBUG
WATCHDOG_ENABLED=true
HOT_RELOAD=true

# ===== DEBUGGING =====
DEBUGGER_PORT=5678
DEBUGGER_HOST=0.0.0.0
IPDB_CONTEXT_SIZE=10

# ===== PERFORMANCE TUNING =====
# DeepSeek optimized settings
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=120

# Faster health checks for development
HEALTH_CHECK_INTERVAL=10
STARTUP_TIMEOUT=60

# ===== FILE WATCHING =====
WATCH_PATTERNS=*.py,*.yml,*.yaml,*.json
WATCH_DIRECTORIES=/app/src,/app/tests
IGNORE_PATTERNS=__pycache__,*.pyc,*.pyo,*.log

# ===== CONTAINER SETTINGS =====
CONTAINER_NAME=mycoder-dev
CONTAINER_USER=mycoder
WORKSPACE_DIR=/app/workspace
LOGS_DIR=/app/logs

# ===== DEVELOPMENT FEATURES =====
ENABLE_HOT_RELOAD=true
ENABLE_FILE_WATCHER=true
ENABLE_DEBUGGER=true
ENABLE_PROFILING=false
ENABLE_METRICS=false

# ===== API CONFIGURATION =====
API_CORS_ENABLED=true
API_CORS_ORIGINS=*
API_DEBUG_MODE=true
API_RELOAD=true

# ===== LOGGING =====
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_FILE=/app/logs/mycoder-dev.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===== TESTING =====
TEST_TIMEOUT=30
TEST_PARALLEL=true
TEST_COVERAGE=true
TEST_VERBOSE=true

# ===== MODEL FALLBACKS =====
# Backup models pokud DeepSeek nenÃ­ dostupnÃ½
FALLBACK_MODELS=deepseek-coder:1.3b-base-q4_0,deepseek-coder:6.7b-instruct-q4_0,llama3.2:3b-instruct-q4_0,codellama:7b-instruct-q4_0

# ===== DEVELOPMENT HELPERS =====
SHOW_STARTUP_INFO=true
SHOW_MODEL_INFO=true
SHOW_PERFORMANCE_STATS=true
AUTO_PULL_MODELS=true

# ===== SECURITY (Development only!) =====
DISABLE_AUTH=true
ALLOW_ALL_ORIGINS=true
ENABLE_DEBUG_ENDPOINTS=true