<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:layout_marginStart="48dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorPrimaryContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:maxWidth="280dp">

        <TextView
            android:id="@+id/message_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:text="John Doe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ai_provider_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="?attr/colorSecondaryContainer"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="Claude"
            tools:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/message_username"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            tools:text="Hello, this is a message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_username" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="11sp"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="12:34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_text" />

        <TextView
            android:id="@+id/ai_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="11sp"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone"
            tools:text="$0.0023"
            tools:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/message_time"
            app:layout_constraintTop_toTopOf="@id/message_time" />

        <ImageButton
            android:id="@+id/speak_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:contentDescription="Play audio"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/ai_cost"
            app:layout_constraintTop_toTopOf="@id/message_time"
            app:layout_constraintBottom_toBottomOf="@id/message_time" />

        <ImageButton
            android:id="@+id/star_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/btn_star_big_off"
            android:contentDescription="@string/star"
            app:layout_constraintStart_toEndOf="@id/speak_button"
            app:layout_constraintTop_toTopOf="@id/message_time"
            app:layout_constraintBottom_toBottomOf="@id/message_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
