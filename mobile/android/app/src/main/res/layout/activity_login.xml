<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <!-- Terminal Header -->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyCoder v2.0 // AUTH_REQ"
        android:textColor="#00FF00"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <!-- Terminal Output Area (Optional decoration) -->
    <TextView
        android:id="@+id/terminal_output"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="> System Check... OK\n> Network Interface... UP\n> Establishing Connection..."
        android:textColor="#FFB000"
        android:fontFamily="monospace"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/header_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Input Section: Looks like command prompt -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/terminal_output"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="root@node:~$ "
            android:textColor="#00FF00"
            android:fontFamily="monospace"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/server_url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#00FF00"
            android:textColorHint="#5500FF00"
            android:hint="server_url"
            android:inputType="textUri"
            android:fontFamily="monospace"
            android:textSize="16sp"
            android:maxLines="1"
            android:imeOptions="actionDone" />
    </LinearLayout>

    <!-- Connect Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/connect_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="CONNECT"
        android:background="@drawable/bg_terminal_button"
        android:textColor="@drawable/text_color_terminal_button"
        android:fontFamily="monospace"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Error Output Area -->
    <TextView
        android:id="@+id/error_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:fontFamily="monospace"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/connect_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
