<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Legacy compatible) -->
    <style name="Theme.MyCoder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/mycoder_blue</item>
        <item name="colorPrimaryVariant">@color/mycoder_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/mycoder_orange</item>
        <item name="colorSecondaryVariant">@color/mycoder_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
